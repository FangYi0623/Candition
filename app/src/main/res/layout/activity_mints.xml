<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mint_background"
    tools:context="com.example.candy.mints">

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:text="@string/mintsIntro" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSpear"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/spearmint" />

        <Button
            android:id="@+id/btnSpear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reveal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPepper"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/peppermint" />

        <Button
            android:id="@+id/btnPepper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reveal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCandyCane"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/candy_cane" />

        <Button
            android:id="@+id/btnCandyCane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reveal" />

    </LinearLayout>

</LinearLayout>