<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gummy_background"
    android:orientation="vertical"
    tools:context="com.example.candy.gummy">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/gummy_intro" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBear"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/gummy_bears" />

        <Button
            android:id="@+id/btnBear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reveal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivWorms"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/worms" />

        <Button
            android:id="@+id/btnWorms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reveal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFruit"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/fruit" />

        <Button
            android:id="@+id/btnFruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reveal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBelts"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/belts" />

        <Button
            android:id="@+id/btnBelts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reveal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivStraw"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/straw" />

        <Button
            android:id="@+id/btnStraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reveal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBites"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/bites" />

        <Button
            android:id="@+id/btnBites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reveal" />

    </LinearLayout>

</LinearLayout>